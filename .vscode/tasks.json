{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mvn: verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "mvn: test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "mvn: run",
            "type": "shell",
            "command": "mvn -B exec:java",
            "group": "build"
        },
        {
            "label": "mvn: install",
            "type": "shell",
            "command": "mvn -B clean install",
            "group": "build"
        }
    ]
}